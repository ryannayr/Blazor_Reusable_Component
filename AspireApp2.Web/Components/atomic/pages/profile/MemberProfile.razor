@rendermode InteractiveServer

<FormTemplate Model="profile">
    <FormInputs>
        <TextViewModelInput IsRequired="true" Label="First Name" Model="profile.FirstName"></TextViewModelInput>
        <TextViewModelInput IsRequired="true" Label="Last Name" Model="profile.LastName"></TextViewModelInput>
        <TextViewModelInput IsRequired="false" Label="Email" Model="profile.EmailAddress"></TextViewModelInput>
    </FormInputs>
</FormTemplate>

@code
{
    private Profile profile { get; set; } = new()
    {
        FirstName = new(),
        LastName = new(),
        EmailAddress = new()
    };
}


