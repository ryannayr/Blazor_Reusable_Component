@inherits InputBaseComponent<TextValueModel>

<InputControl Model="Model" Label="@Label" IsRequired="@IsRequired">
    <InputField>
        <BasicInputText CssClass="" Value="@context.Value" ValueChanged="@((value) => context.Value = value)" />
        @if (IsRequired)
        {
            <ValidationMessage For="@(() => context.Value)" />
        }
    </InputField>
</InputControl>