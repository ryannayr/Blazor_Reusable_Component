@using AspireApp2.Web.Components.atomic.interfaces
@using AspireApp2.Web.Components.atomic.models

<InputTextControl Model="@Model" Label="@Label" IsRequired="@IsRequired">
    <InputField>
        <RadzenInputText CssClass="" Value="@(((ITextValue)context).Value)" ValueChanged="@((value) => ((ITextValue)context).Value = value)" />
    </InputField>
</InputTextControl>
@code
{
    [Parameter] public required string Label { get; set; }
    [Parameter] public required TextValueModel Model { get; set; }
    [Parameter] public required bool IsRequired { get; set; }
}