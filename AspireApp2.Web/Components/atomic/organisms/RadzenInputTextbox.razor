@inherits InputTextboxComponent<TextValueModel>
<InputTextControl Model="@Model" Label="@Label" IsRequired="@IsRequired">
    <InputField>
        <RadzenInputText CssClass="" Value="@(((ITextValue<string>)context).Value)" ValueChanged="@((value) => ((ITextValue<string>)context).Value = value)" />
        @if (IsRequired)
        {
            <ValidationMessage For="@(() => ((ITextValue<string>)context).Value)" />
        }
    </InputField>
</InputTextControl>